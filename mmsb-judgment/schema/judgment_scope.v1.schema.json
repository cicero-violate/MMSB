{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MMSB Judgment Scope Artifact v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "scope_id",
    "judgment_id",
    "intent_class",
    "allowed_paths",
    "forbidden_paths",
    "allowed_tools",
    "forbidden_tools",
    "max_files_touched",
    "max_diff_lines",
    "issued_at",
    "version"
  ],
  "properties": {
    "schema": {
      "const": "judgment_scope.v1"
    },
    "scope_id": {
      "type": "string",
      "format": "uuid"
    },
    "judgment_id": {
      "type": "string",
      "format": "uuid"
    },
    "intent_class": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "allowed_paths": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "forbidden_paths": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "allowed_tools": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "forbidden_tools": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "max_files_touched": {
      "type": "integer",
      "minimum": 1
    },
    "max_diff_lines": {
      "type": "integer",
      "minimum": 1
    },
    "issued_at": {
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "const": 1
    }
  }
}
